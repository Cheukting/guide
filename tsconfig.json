{
	"compilerOptions": {
		"module": "ESNext",
		"target": "ESNext",
		"moduleResolution": "Node",
		"outDir": "dist",
		"rootDir": ".",
		"strict": true,
		"jsx": "react-jsx",
		"jsxImportSource": "jsx-async-runtime",
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true
	},
	"include": [
		"src",
		"_includes/**/*",
		"public",
		"node_modules/vitest/globals.d.ts",
		"site/**/*.tsx",
		"customTypes",
		"tools/*.ts"
	],
	"exclude": [
		"node_modules",
		"site/**/demos/**",
		"site/javascript/demos/tutorials/react_typescript_tdd/*/src/*.ts*"
	]
}
