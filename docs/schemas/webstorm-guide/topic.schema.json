{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "$id": "https://www.jetbrains.com/guide/topic.schema.json",
  "title": "JetBrains Guide Topic",
  "properties": [],
  "allOf": [
    {
      "type": "object",
      "allOf": [
        {
          "type": "object",
          "properties": {
            "resourceType": {
              "description": "Resource type. Should not be specified manually",
              "type": "string"
            },
            "title": {
              "description": "Title of this resource",
              "type": "string"
            }
          },
          "required": [
            "title"
          ]
        },
        {
          "type": "object",
          "properties": {
            "label": {
              "description": "Label of this resource",
              "type": "string"
            },
            "subtitle": {
              "description": "Subtitle of this resource",
              "type": "string"
            }
          }
        }
      ]
    },
    {
      "type": "object",
      "properties": {
        "accent": {
          "type": "string"
        },
        "icon": {
          "type": "string"
        }
      },
      "required": [
        "accent",
        "icon"
      ]
    }
  ]
}