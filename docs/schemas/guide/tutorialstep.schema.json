{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://www.jetbrains.com/guide/tutorialstep.schema.json",
  "title": "JetBrains Guide TutorialStep",
  "properties": {},
  "allOf": [
    {
      "type": "object",
      "allOf": [
        {
          "type": "object",
          "properties": {
            "resourceType": {
              "description": "Resource type. Should not be specified manually",
              "type": "string"
            },
            "title": {
              "description": "Title of this resource",
              "type": "string"
            },
            "subtitle": {
              "description": "Subtitle of this resource",
              "type": "string"
            },
            "obsoletes": {
              "description": "Paths that should redirect to this resource",
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          "required": [
            "title"
          ]
        },
        {
          "type": "object",
          "properties": {
            "author": {
              "description": "Author of this resource",
              "type": "string"
            },
            "date": {
              "description": "Date this resource was published",
              "format": "date",
              "type": "string"
            },
            "thumbnail": {
              "description": "File name of the thumbnail for this resource",
              "type": "string"
            },
            "cardThumbnail": {
              "description": "File name of the social card thumbnail for this resource",
              "type": "string"
            },
            "tags": {
              "description": "11ty tag data",
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "topics": {
              "description": "Topics related to this resource",
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          "required": [
            "author",
            "date"
          ]
        }
      ]
    },
    {
      "type": "object",
      "properties": {
        "videoBottom": {
          "description": "True if video should be rendered at the bottom; false otherwise",
          "type": "boolean"
        },
        "video": {
          "anyOf": [
            {
              "description": "YouTube URL to the video",
              "type": "string"
            },
            {
              "description": "Animated GIF to show in this tip",
              "type": "object",
              "properties": {
                "url": {
                  "description": "YouTube URL to the video",
                  "type": "string"
                },
                "start": {
                  "description": "start time for the video",
                  "type": "number"
                },
                "end": {
                  "description": "end time for the video",
                  "type": "number"
                }
              },
              "required": [
                "url",
                "start",
                "end"
              ]
            }
          ]
        }
      }
    }
  ]
}