{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://www.jetbrains.com/guide/tutorialstep.schema.json",
  "title": "JetBrains Guide TutorialStep",
  "properties": {},
  "allOf": [
    {
      "type": "object",
      "allOf": [
        {
          "type": "object",
          "properties": {
            "resourceType": {
              "description": "Resource type. Should not be specified manually",
              "type": "string"
            },
            "title": {
              "description": "Title of this resource",
              "type": "string"
            },
            "subtitle": {
              "description": "Subtitle of this resource",
              "type": "string"
            },
            "obsoletes": {
              "description": "Paths that should redirect to this resource",
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          "required": [
            "title"
          ]
        },
        {
          "type": "object",
          "properties": {
            "author": {
              "enum": [
                "ap",
                "citizenmatt",
                "da",
                "dlsniper",
                "dw",
                "ed",
                "er",
                "hs",
                "khalidabuhakmeh",
                "maartenba",
                "matkoch",
                "md",
                "mm",
                "ni",
                "pwe",
                "rachelappel",
                "sf",
                "tg",
                "vb",
                "wht"
              ],
              "description": "Author of this resource"
            },
            "date": {
              "description": "Date this resource was published",
              "format": "date",
              "type": "string"
            },
            "thumbnail": {
              "description": "File name of the thumbnail for this resource",
              "type": "string"
            },
            "cardThumbnail": {
              "description": "File name of the social card thumbnail for this resource",
              "type": "string"
            },
            "topics": {
              "description": "Topics related to this resource",
              "type": "array",
              "items": {
                "enum": [
                  ".net",
                  "angular",
                  "asp.net",
                  "aws",
                  "build",
                  "completion",
                  "containers",
                  "coverage",
                  "cra",
                  "csharp",
                  "css",
                  "customizing",
                  "data",
                  "databases",
                  "debugging",
                  "django",
                  "dotcover",
                  "dotmemory",
                  "dottrace",
                  "editing",
                  "emmet",
                  "fastapi",
                  "fsharp",
                  "gaming",
                  "generics",
                  "gettingstarted",
                  "git",
                  "go",
                  "gradle",
                  "groovy",
                  "html",
                  "ide",
                  "inspections",
                  "interface",
                  "java",
                  "javascript",
                  "jest",
                  "json",
                  "junit",
                  "kotlin",
                  "kubernetes",
                  "latest",
                  "livetemplates",
                  "markup",
                  "maven",
                  "mongodb",
                  "navigation",
                  "navigationbar",
                  "nodejs",
                  "packagesearch",
                  "platform",
                  "plugins",
                  "postgreSQL",
                  "profiling",
                  "pytest",
                  "python",
                  "quick-fixes",
                  "react",
                  "refactoring",
                  "resharper",
                  "rider",
                  "riderflow",
                  "running",
                  "security",
                  "settings",
                  "speedsearch",
                  "sphinx",
                  "spring",
                  "testing",
                  "tomcat",
                  "tricks",
                  "typescript",
                  "ui",
                  "ultimate",
                  "unity",
                  "unreal",
                  "vcs",
                  "web"
                ]
              }
            }
          },
          "required": [
            "author",
            "date"
          ]
        }
      ]
    },
    {
      "type": "object",
      "properties": {
        "videoBottom": {
          "description": "True if video should be rendered at the bottom; false otherwise",
          "type": "boolean"
        },
        "longVideo": {
          "description": "Long video to show in this tutorial step",
          "type": "object",
          "properties": {
            "url": {
              "description": "URL of the video",
              "type": "string"
            },
            "posterNumber": {
              "description": "Poster number to render",
              "type": "string"
            },
            "poster": {
              "description": "File name of a poster to show for this video",
              "type": "string"
            },
            "start": {
              "description": "Where to start the video in seconds",
              "type": "number"
            },
            "end": {
              "description": "Where to stop the video in seconds",
              "type": "number"
            }
          },
          "required": [
            "url"
          ]
        }
      }
    }
  ]
}