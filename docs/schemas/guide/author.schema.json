{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://www.jetbrains.com/guide/author.schema.json",
  "title": "JetBrains Guide Author",
  "properties": {},
  "allOf": [
    {
      "type": "object",
      "allOf": [
        {
          "type": "object",
          "properties": {
            "resourceType": {
              "description": "Resource type. Should not be specified manually",
              "type": "string"
            },
            "title": {
              "description": "Title of this resource",
              "type": "string"
            },
            "subtitle": {
              "description": "Subtitle of this resource",
              "type": "string"
            },
            "obsoletes": {
              "description": "Paths that should redirect to this resource",
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "channel": {
              "description": "Possible channel this resource is in",
              "type": "string"
            }
          },
          "required": [
            "title"
          ]
        },
        {
          "type": "object",
          "properties": {
            "label": {
              "description": "Label of this resource",
              "type": "string"
            }
          }
        }
      ]
    },
    {
      "type": "object",
      "properties": {
        "thumbnail": {
          "type": "string"
        }
      },
      "required": [
        "thumbnail"
      ]
    }
  ]
}