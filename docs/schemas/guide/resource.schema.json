{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://www.jetbrains.com/guide/resource.schema.json",
  "title": "JetBrains Guide Resource",
  "properties": {},
  "allOf": [
    {
      "type": "object",
      "properties": {
        "resourceType": {
          "description": "Resource type. Should not be specified manually",
          "type": "string"
        },
        "title": {
          "description": "Title of this resource",
          "type": "string"
        },
        "subtitle": {
          "description": "Subtitle of this resource",
          "type": "string"
        },
        "obsoletes": {
          "description": "Paths that should redirect to this resource",
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": [
        "title"
      ]
    },
    {
      "type": "object",
      "properties": {
        "author": {
          "description": "Author of this resource",
          "type": "string"
        },
        "date": {
          "description": "Date this resource was published",
          "format": "date",
          "type": "string"
        },
        "thumbnail": {
          "description": "File name of the thumbnail for this resource",
          "type": "string"
        },
        "cardThumbnail": {
          "description": "File name of the social card thumbnail for this resource",
          "type": "string"
        },
        "tags": {
          "description": "11ty tag data",
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "topics": {
          "description": "Topics related to this resource",
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": [
        "author",
        "date"
      ]
    }
  ],
  "type": "object"
}