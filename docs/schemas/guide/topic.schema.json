{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://www.jetbrains.com/guide/topic.schema.json",
  "title": "JetBrains Guide Topic",
  "properties": {},
  "allOf": [
    {
      "type": "object",
      "allOf": [
        {
          "type": "object",
          "properties": {
            "resourceType": {
              "description": "Resource type. Should not be specified manually",
              "anyOf": [
                {
                  "const": "tip",
                  "type": "string"
                },
                {
                  "const": "article",
                  "type": "string"
                },
                {
                  "const": "tutorial",
                  "type": "string"
                },
                {
                  "const": "tutorialstep",
                  "type": "string"
                },
                {
                  "const": "playlist",
                  "type": "string"
                },
                {
                  "const": "channel",
                  "type": "string"
                },
                {
                  "const": "page",
                  "type": "string"
                },
                {
                  "const": "author",
                  "type": "string"
                },
                {
                  "const": "topic",
                  "type": "string"
                }
              ]
            },
            "title": {
              "description": "Title of this resource",
              "type": "string"
            },
            "subtitle": {
              "description": "Subtitle of this resource",
              "type": "string"
            },
            "obsoletes": {
              "description": "Paths that should redirect to this resource",
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "channel": {
              "description": "Possible channel this resource is in",
              "type": "string"
            }
          },
          "required": [
            "resourceType",
            "title"
          ]
        },
        {
          "type": "object",
          "properties": {
            "label": {
              "description": "Label of this resource",
              "type": "string"
            }
          }
        }
      ]
    },
    {
      "type": "object",
      "properties": {
        "accent": {
          "type": "string"
        },
        "icon": {
          "type": "string"
        },
        "logo": {
          "type": "string"
        },
        "topicType": {
          "type": "string"
        }
      }
    }
  ]
}